{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "Cars API",
		"description": "Challenge 3 Restful API"
	},
	"host": "localhost:2000",
	"basePath": "/",
	"tags": [
		{
			"name": "cars",
			"description": "Cars API Challenge 3"
		}
	],
	"schemes": ["http"],
	"paths": {
		"/": {
			"get": {
				"description": "root api",
				"responses": {
					"200": {
						"description": "Ping Successfully"
					}
				}
			}
		},
		"/cars": {
			"get": {
				"description": "list all of cars",
				"tags": ["cars"],
				"responses": {
					"200": {
						"description": "List all of cars"
					}
				}
			}
		},
		"/cars/create": {
			"post": {
				"tags": ["cars"],
				"description": "create new car",
				"parameters": [
					{
						"name": "body",
						"in": "body",
						"schema": {
							"type": "object",
							"properties": {
								"id": {
									"type": "string",
									"format": "uuid",
									"description": "Auto Generated ID"
								},
								"plate": {
									"type": "string",
									"description": "Car Plate"
								},
								"image": {
									"type": "string",
									"description": "Car Image"
								},
								"capacity": {
									"type": "number",
									"description": "Car Capacity"
								},
								"manufacture": {
									"type": "string",
									"description": "Car Manufacture"
								},
								"type": {
									"type": "string",
									"description": "Car Type"
								},
								"year": {
									"type": "string",
									"description": "Car Year"
								},
								"description": {
									"type": "string",
									"description": "Car Description"
								},
								"rentPerDay": {
									"type": "number",
									"description": "Car Rent Cost"
								},
								"availableAt": {
									"type": "string",
									"description": "Car availableAt (date time)"
								},
								"available": {
									"type": "boolean",
									"description": "Car Available"
								},
								"transmission": {
									"type": "string",
									"description": "Car Transmission"
								},
								"options": {
									"type": "array",
									"description": "Car Option"
								},
								"specs": {
									"type": "array",
									"description": "Car Specification"
								}
							}
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Not Found"
					},
					"500": {
						"description": "Internal Server Error"
					}
				}
			}
		},
		"/cars/detail/{id}": {
			"get": {
				"tags": ["cars"],
				"description": "Get Car By ID",
				"parameters": [
					{
						"in": "path",
						"name": "id",
						"type": "string",
						"required": true,
						"format": "uuid"
					}
				],
				"responses": {
					"200": {
						"description": "OK"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Not Found"
					},
					"500": {
						"description": "Internal Server Error"
					}
				}
			}
		}
	}
}
